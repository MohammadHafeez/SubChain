@model IEnumerable<P2_SubChain.Models.Product>
@{
    ViewBag.Title = "Products";
}

<header>
    <img src="~/images/logo.svg" alt="" />
    <div class="burger">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </div>
    <nav class="cust__nav">
        <ul>
            <li><a href="~/Distributor/Index">Home</a></li>
            <li><a href="~/Distributor/Invoice">Invoices</a></li>
            <li><a href="~/Distributor/Communication">Communication</a></li>
            <li><a href="~/Home/SignOut">Sign Out</a></li>
        </ul>
    </nav>
</header>
<main class="product_page">
    @{
        if (Model.Count() == 0)
        {
            <h2>No Products found for this supplier</h2>
        }
        else
        {
            <h2>A list of Products from this Supplier</h2>
            <section>
                @foreach (Product p in Model)
                {
                    <article>
                        <div class="image_box">
                            <img src="~/images/@p.ImageUrl" />
                        </div>
                        <article>
                            <p>@p.ProductName</p>
                            <p>@p.ProductDesc</p>
                            <p>$@p.ProductPrice</p>
                        </article>
                        <a asp-controller="Distributor" asp-action="Chat" asp-route-id="@p.UserId">Inquire</a>
                    </article>
                }
            </section>
        }
    }
</main>